title = {{Policy Issues in the Development and Adoption of Biomarkers for Molecularly Targeted Cancer Therapies}},
url = {https://www.nap.edu/catalog/21692/policy-issues-in-the-development-and-adoption-of-biomarkers-for-molecularly-targeted-cancer-therapies},
