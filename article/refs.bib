pmid = {27922430},
title = {{Downregulation of miR-124 predicts poor prognosis in pancreatic ductal adenocarcinoma patients}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/27922430 https://www.tandfonline.com/doi/full/10.1080/09674845.2016.1220706},
