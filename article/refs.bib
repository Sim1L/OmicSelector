journal = {Medicine (United States)},
month = {jan},
number = {3},
pages = {e2572},
pmid = {26817914},
title = {{Combination of intravesical chemotherapy and bacillus calmette-guerin versus bacillus calmette-guerin monotherapy in intermediate-And high-risk nonmuscle invasive bladder cancer: A systematic review and meta-Analysis}},
