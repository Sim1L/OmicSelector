journal = {Diabetes Technology and Therapeutics},
keywords = {Blood Glucose,Blood Glucose Self-Monitoring,Child, Preschool,Diabetes Mellitus, Type 1,Equipment Failure,Glycated Hemoglobin A,Humans,Hypoglycemic Agents,Infant,Infusions, Subcutaneous,Insulin,Insulin Infusion Systems,Parents,Quality of Life,administration {\&} dosage,blood,drug effects,drug therapy,instrumentation,psychology},
language = {eng},
