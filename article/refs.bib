pages = {84--92},
pmid = {26262588},
title = {{MiRNA-21 and miRNA-34a Are Potential Minimally Invasive Biomarkers for the Diagnosis of Pancreatic Ductal Adenocarcinoma}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/26262588 http://content.wkhealth.com/linkback/openurl?sid=WKPTLP:landingpage{\&}an=00006676-201601000-00012},
