pages = {840--851},
pmid = {28954272},
title = {{CXCR4/Let-7a Axis Regulates Metastasis and Chemoresistance of Pancreatic Cancer Cells Through Targeting HMGA2}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/28954272 https://www.karger.com/Article/FullText/481610},
