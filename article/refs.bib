keywords = {Artificial intelligence (AI),Artificial neural network (ANN),Pharmaceutical research},
month = {jun},
number = {5},
pages = {717--727},
pmid = {10815714},
publisher = {Elsevier},
title = {{Basic concepts of artificial neural network (ANN) modeling and its application in pharmaceutical research}},
url = {https://www.sciencedirect.com/science/article/abs/pii/S0731708599002721},
