file = {:C$\backslash$:/Users/Konrad/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Ma et al. - 2015 - MR diffusion-weighted imaging-based subcutaneous tumour volumetry in a xenografted nude mouse model using 3D Slicer a.pdf:pdf},
issn = {20452322},
journal = {Scientific Reports},
month = {jan},
